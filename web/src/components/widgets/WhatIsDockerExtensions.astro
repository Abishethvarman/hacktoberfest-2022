---
import { Icon } from 'astro-icon';
import Picture from '~/components/core/Picture.astro';
import * as content from "~/content/what-is-docker-extensions.md";

---

<section>
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-12 md:py-20">
			<div class="text-center pb-10 md:pb-16">
				<h1 class="text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading">
					What is Docker
					<span class="bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-secondary-500"
						>Extensions</span
					> ?
				</h1>
				<div class="max-w-3xl mx-auto">
					<span class="text-xl text-gray-600 dark:text-slate-400">
						<content.Content />
					</span>
				</div>
			</div>
			<div>
				<div class="relative m-auto max-w-3xl">
					<Picture
						src={content.frontmatter.image}
						class="mx-auto rounded-md"
						widths={[400, 768]}
						sizes=" (max-width: 767px) 400px, 768px"
						alt="Disk Usage Extension"
						aspectRatio="16:9"
					/>
				</div>
			</div>
		</div>
	</div>
</section>
